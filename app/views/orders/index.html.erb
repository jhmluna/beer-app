
<div class="container">
  <h1>My Beer Orders</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Date of Purchase</th>
        <th scope="col">Ticket Number</th>
        <th scope="col">Beer Title</th>
        <th scope="col">Quantity</th>
        <th scope="col">Invoiced Amount</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.date %></td>
          <td><%= '%05d' % order.id %></td>
          <td><%= order.beer.name %></td>
          <td><%= order.quantity %></td>
          <td><%= '%.2f' % (order.beer.price * order.quantity) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
