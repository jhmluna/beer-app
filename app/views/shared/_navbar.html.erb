<div class="navbar navbar-expand-sm navbar-light navbar-lewagon shadow">
  <div class="container">
    <%= link_to beers_path, class: "navbar-brand" do %>
      <%= image_tag "logo-beer.png" %>
    <% end %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <% if user_signed_in? %>
              <%= link_to "My Profile", user_path(current_user), class: "nav-link" %>
          <% else %>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          <% end %>
        </li>
          <li class="nav-item">
            <%= link_to 'Sell Beer', new_beer_path, class:  "nav-link btn btn-warning text-white" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "refrigerator.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
