<%= simple_form_for(@beer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <div class="d-flex justify-content-between col-md-4 px-0">
      <%= f.button :submit, "Create Sale", class: "btn btn-warning text-white" %>
      <%= link_to 'Back', @beer, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
