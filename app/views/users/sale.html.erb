<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ticket Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @sales == nil %>
      <p>Sell a beer first!</p>
    <% else @sales.each do |sale| %>
      <tr>
        <td><%= sale.date %></td>
        <td><%= sale.id %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
