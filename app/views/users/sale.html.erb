<p id="notice"><%= notice %></p>

<div class="container">
  <h1>My Beer Sales</h1>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Ticket Number</th>
          <th scope="col">Beer</th>
          <th scope="col">Quantity</th>
          <th scope="col">Price</th>
        </tr>
      </thead>
      <tbody>
        <% if @sales == nil %>
          <p>Sell a beer first!</p>
        <% else @sales.each do |sale| %>
          <tr>
            <td><%= sale.date %></td>
            <td><%= '%05d' % sale.id %></td>
            <td><%= sale.beer.name %></td>
            <td><%= sale.quantity %></td>
            <td><%=  '%.2f' % (sale.beer.price * sale.quantity) %></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
