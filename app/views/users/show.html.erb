<div class="container vh-100">
  <h2 class="display-4 my-4">My profile</h2>

  <form action="/users" accept-charset="UTF-8" method="post">
    <div class="row form-group">
      <label class="col-6 col-md-2 col-form-label text-right">E-mail</label>
      <div class="col-6 col-md-4">
        <input class="form-control" type="text" placeholder="<%= @user.email %>" readonly>
      </div>
    </div>
    <div class="row form-group align-items-center">
      <label class="col-sm-2 col-form-label text-right">Full name</label>
      <div class="col-sm-4">
        <p class="mb-0"><%= @user.full_name %></p>
      </div>
    </div>
    <div class="row form-group align-items-center">
      <label class="col-sm-2 col-form-label text-right">Address</label>
      <div class="col-sm-4">
        <p class="mb-0"><%= @user.address %></p>
      </div>
    </div>
    <%= link_to 'Atualizar cadastro', edit_user_path(@user), class: "btn btn-outline-secondary" %>
    </form>


  <%= link_to 'Orders', orders_path %>
  <%= link_to 'Sales', user_sales_path(user_id: current_user) %>
</div>
