<div class="container-lg vh-100">
  <h2 class="display-4 my-4">Update your profile</h2>

  <%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :full_name, label_html: { class: "col-lg-2 col-form-label font-weight-bold"}, input_html: { class: "col-md-4 form-control" } %>
    <%= f.input :address, label_html: { class: "col-lg-2 col-form-label font-weight-bold"}, input_html: { class: "col-md-4 form-control" } %>
  </div>

  <div class="form-actions">
    <div class="d-flex justify-content-between col-md-4 px-0">
        <%= f.button :submit, class: "btn btn-success text-light" %>
        <%= link_to 'Back', @user, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
</div>
